<div class='marketing h-screen flex items-center justify-center'>
	<div class='flex items-center justify-center gap-11l'>
		<div class='col-md-7 mt-10rem'>
			<h2 class='featurette-heading fw-normal lh-1 text-7xl mx-11 my-11'>What Is Event Planning now?
				<span class='text-info'>Use an Event Planning app.</span>
			</h2>
			<p class='lead'>Some great placeholder content for the first featurette here. Imagine some exciting prose
				here.</p>
			<a href="/add">
				<button style="background: #004400;color: aliceblue;" class="btn my-11">Add new event</button>
			</a>
		</div>
		<div class='col-md-5'>
			<img src='/event.jpg' width='100%' />
		</div>
	</div>
</div>
<h1 class="text-center text-5xl fs-1 font-bold  my-11">Explore others' events</h1>
<hr class='featurette-divider' />
{{#if products.length}}
<div class='row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3'>
	{{#each products}}
	<div class='col'>
		<div class='card shadow-sm'>
			<img src='{{image}}' />
			<div class='card-body'>
				<p class='card-text fw-bold'>{{title}}</p>
				<div class='d-flex justify-content-between align-items-center'>
					<p class='p-0 m-0'>{{formatDate createdAt}}</p>
					<small class='text-muted fs-5'>{{price}}.00$</small>
				</div>
			</div>
			<div class='card-footer'>
				<div class='btn-group btn-group-sm' role='group' aria-label='Basic example'>
					<a type='button' class='btn btn-outline-primary' href='/product/{{_id}}'>Detail</a>
					{{#if @root.token}}
					{{#ifequal user @root.userId}}
					<a type='button' class='btn btn-outline-secondary' href='/edit-product/{{_id}}'>Edit</a>
					<form action='/delete-product/{{_id}}' method='post' class='m-0 btn btn-outline-danger'>
						<button type='submit' class='delete-btn'>Delete</button>
					</form>
					{{/ifequal}}
					{{/if}}
				</div>
			</div>
		</div>
	</div>
	{{/each}}
</div>
{{else}}
<section class='page_404 w-75 mx-auto'>
	<div class='row'>
		<div class='col-sm-12'>
			<div class='col-sm-10 col-sm-offset-1 text-center'>
				<div class='four_zero_four_bg'>
					<h1 class='text-center'>404</h1>
				</div>
				<div class='contant_box_404'>
					<h3 class='h2'>Add new products</h3>
					<a href='/add' class='btn btn-primary btn-lg mb-5'>Add products</a>
				</div>
			</div>
		</div>
	</div>
</section>
{{/if}}